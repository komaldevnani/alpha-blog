<h1 align="center"> Articles of category </h1>

<h2 align="center"><span class="badge badge-secondary"><%=@category.name%></span></h2>
<div align="center">
    <% if logged_in? and current_user.admin?%>
    <div class="row">
        <span class="badge"><%= link_to "Edit Category Name", 
        edit_category_path(@category) %></span>
    </div>
    <% end %>
</div>

<%= render 'articles/article', obj: @category_articles %>
